@model IEnumerable<GarageShop.Models.Product>

@{
    ViewData["Title"] = "Cart";
}
<link rel="stylesheet" href="~/css/cart.css" />

<section class="class-wrappper">
    <div class="cart-side-bar flex column" style="position: fixed;">
        <h1>Hello Username</h1>
        <div>
            <span style="color: green;">+</span> <span>Trust</span>
        </div>
        <div>
            <span style="color: green;">+</span> <span>Price</span>
        </div>
        <div>
            <span style="color: green;">+</span> <span>Reallibilty</span>
        </div>
        <p class="price"> Price : <span>100$</span></p>
        <div>
            <a style="margin-top: 10px !important; " href="#" class="animated-button victoria-one">
                Purchase
            </a>
        </div>
    </div>
    <div style="width: 70vw; margin: 20px;" class="flex wrap">
        <h1 style="margin:0 auto; margin-bottom: 20px;">Welcome to Your Cart</h1>
        <div class="cars-wrapper" style="width: 100%;">
            <div class="cars-container">
                @foreach (Product product in Model)
                {
                    <div class="car ">
                        <div class="img-container">
                            <img src="@product.Image">
                        </div>
                        <div class="flex justify-space-between" style="margin-bottom: 10px;">
                            <h4 class="price">@product.Price₪</h4>
                            <h4 class="car-type">@product.Name</h4>
                        </div>
                        <p class="desc">@product.Description</p>
                        <!--          <div> <a href="#"  class="animated-button victoria-one">
                    Continue</a>
            </div> -->
                        <div>
                            <a href="#" class="animated-button victoria-one">
                                Continue
                            </a>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</section>
