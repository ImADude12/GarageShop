
@{
    ViewData["Title"] = "Shop";
}

<link rel="stylesheet" href="~/css/shop.css">
<div class="align-self-center">
    <section class="">
        <div class="">
        </div>

        <form method="get" enctype="multipart/form-data" asp-controller="Shop" asp-action="Index">
            <input name="prodName" placeholder="Enter something to search" />
            <select class="custom-select col-lg-3 col-md-3" name="categoryId">
                <option value="" selected>Search By Category</option>
                @foreach (Category category in ViewBag.Category)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
            <select class="custom-select col-lg-3 col-md-3" name="sellerId">
                <option value="" selected>Search By Seller</option>
                @foreach (Seller seller in ViewBag.Seller)
                {
                    <option value="@seller.Id">@seller.Name</option>
                }
            </select>
            <div class="col-lg-1 col-md-1">
                <button class="btn btn-primary">Search</button>
            </div>
        </form>

        <script type="text/javascript">
            let searchParams = new URLSearchParams(window.location.search)
            if (searchParams.has('prodName')) {
                $('[name="prodName"]').val(searchParams.get('prodName'));
            }
            if (searchParams.has('categoryId')) {
                $('[name="categoryId"]').val(searchParams.get('categoryId'));
            }
            if (searchParams.has('sellerId')) {
                $('[name="sellerId"]').val(searchParams.get('sellerId'));
            }
        </script>

