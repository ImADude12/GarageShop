
@{
    ViewData["Title"] = "Shop";
    Layout = "_PannelLayout";
}

<link rel="stylesheet" href="~/css/shop.css">

<div class="align-self-center">
    <section class="">
        <div class="">
        </div>

        <form id="my_form" style="margin:50px; padding-bottom:40px; border-bottom: 1px solid #dddddd;" class="flex justify-center" method="get" enctype="multipart/form-data" asp-controller="Shop" asp-action="Index">
            <input class="form-control" type="text" style="margin: 10px;font-size: 14px; width: 250px;" name="prodName" placeholder="Enter something to search" />
            <select style="margin:10px;" class="custom-select col-lg-3 col-md-3" name="categoryId">
                <option value="" selected>Search By Category</option>
                @foreach (Category category in ViewBag.Category)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
            <select style="margin:10px;" class="custom-select col-lg-3 col-md-3" name="sellerId">
                <option value="" selected>Search By Seller</option>
                @foreach (Seller seller in ViewBag.Seller)
                {
                    <option value="@seller.Id">@seller.Name</option>
                }
            </select>
            <div class="col-lg-1 col-md-1">
            <a onclick="document.getElementById('my_form').submit();" class="btn btn-lg" href="#">
                <span>Search</span>
            </a>
            </div>
