        <div class="cars-wrapper">
            <div class="flex column align-center justify-center" style="padding: 20px;">

            </div>
            <div class="cars-container ">
                @foreach (var product in ViewBag.Products)
                {
                    <div class="car ">
                        <div class="img-container">
                            <img src="@product.Image">
                        </div>
                        <div class="flex column align-center justify-space-between" style="margin-bottom: 10px;">
                            <h4 class="price">$@product.Price</h4>
                            <h4 class="car-type">@product.Name</h4>
                            <h4 class="car-type">@product.SellerName</h4>
                            <h4 class="car-type">@product.CategoryName</h4>
                        </div>
                        <p class="desc">@product.Description</p>
                        <!--          <div> <a href="#"  class="animated-button victoria-one">
                            Continue</a>
                    </div> -->
                        <div>
                            <a href="/products/details/@product.Id" class="animated-button victoria-one">
                                Continue
                            </a>
                        </div>

                    </div>
                }

            </div>


        </div>
    </section>
