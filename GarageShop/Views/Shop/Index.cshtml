@model dynamic
@{
    ViewData["Title"] = "Shop";
}

<link rel="stylesheet" href="~/css/shop.css">
<div class="align-self-center">
 <form class="flex" asp-action="Search">
        <input name="queryName" placeholder="Enter something to search" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </form>
    <section class="">
        <div class="">
        </div>
        <div class="categories-container">
            <h2>Categories</h2>
            <label class="container">
                One
                <input type="checkbox" checked="checked">
                <span class="checkmark"></span>
            </label>
            <label class="container">
                Two
                <input type="checkbox">
                <span class="checkmark"></span>
            </label>
            <label class="container">
                Three
                <input type="checkbox">
                <span class="checkmark"></span>
            </label>
            <label class="container">
                Four
                <input type="checkbox">
                <span class="checkmark"></span>
            </label>
        </div>
        <
        <div class="cars-wrapper">
            <div class="flex column align-center justify-center" style="padding: 20px;">
         
            </div>
            <div>

                 <ul>
                @foreach (Category category in Model.Category) { 
                <li>@category.Name</li>
                }
                </ul>
                </div>
            <div class="cars-container ">
                @foreach (Product product in Model.Product)
                {
                    <div class="car ">
                        <div class="img-container">
                            <img src="@product.Image">
                        </div>
                        <div class="flex justify-space-between" style="margin-bottom: 10px;">
                            <h4 class="price">$@product.Price</h4>
                            <h4 class="car-type">@product.Name</h4>
                        </div>
                        <p class="desc">@product.Description</p>
                        <!--          <div> <a href="#"  class="animated-button victoria-one">
                                Continue</a>
                        </div> -->
                        <div>
                            <a href="/products/details/@product.Id" class="animated-button victoria-one">
                                Continue
                            </a>
                        </div>

                    </div>
                }

            </div>


        </div>
    </section>
</div>