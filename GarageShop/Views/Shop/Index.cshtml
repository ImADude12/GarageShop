        <script type="text/javascript">
            let searchParams = new URLSearchParams(window.location.search)
            if (searchParams.has('prodName')) {
                $('[name="prodName"]').val(searchParams.get('prodName'));
            }
            if (searchParams.has('categoryId')) {
                $('[name="categoryId"]').val(searchParams.get('categoryId'));
            }
            if (searchParams.has('sellerId')) {
                $('[name="sellerId"]').val(searchParams.get('sellerId'));
            }
        </script>

