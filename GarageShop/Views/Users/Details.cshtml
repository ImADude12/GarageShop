@model GarageShop.Models.User

@{
    ViewData["Title"] = "Details";
    Layout = "_PannelLayout";


}
<link rel="stylesheet" href="~/css/modelPannel.css" />

<h1>User Details</h1>
<div class="card" style="width: 18rem;">
    <div class="card-body">

        <h5 class="card-title">
            <b>FullName</b>  @Html.DisplayFor(model => model.FullName)
        </h5>
        <p class="card-text">
            <b>Username</b> @Html.DisplayFor(model => model.Username)
        </p>
        <p class="card-text"><b>Email</b>  @Html.DisplayFor(model => model.Email)</p>
        <p class="card-text">
            <b>User Type</b>  @Html.DisplayFor(model => model.UserType)
        <p class="card-text"></p>
        <div class="flex justify-space-between">
            <a class="btn" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn return" asp-action="Index">Return</a>
        </div>
    </div>
</div>
